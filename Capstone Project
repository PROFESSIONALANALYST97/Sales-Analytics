WITH AccountMetrics AS (
    SELECT
        s.date,
        sp.country,
        a.send_interval,
        a.is_verified,
        a.is_unsubscribed,
        COUNT(DISTINCT a.id) AS account_cnt,
        NULL AS sent_msg,
        NULL AS open_msg,
        NULL AS visit_msg
    FROM `data-analytics-mate.DA.account` AS a
    JOIN `data-analytics-mate.DA.account_session` AS acs ON a.id = acs.account_id
    JOIN `data-analytics-mate.DA.session` AS s ON acs.ga_session_id = s.ga_session_id
    JOIN `data-analytics-mate.DA.session_params` AS sp ON s.ga_session_id = sp.ga_session_id
    WHERE sp.country != '(not set)' AND s.date IS NOT NULL
    GROUP BY 1, 2, 3, 4, 5
),
EmailMetrics AS (
    SELECT
        DATE_ADD(s.date, INTERVAL es.sent_date DAY) AS date,
        sp.country AS country,
        a.send_interval AS send_interval,
        a.is_verified AS is_verified,
        a.is_unsubscribed AS is_unsubscribed,
        NULL AS account_cnt,
        COUNT(DISTINCT es.id_message) AS sent_msg,
        COUNT(DISTINCT eo.id_message) AS open_msg,
        COUNT(DISTINCT ev.id_message) AS visit_msg
    FROM `data-analytics-mate.DA.email_sent` AS es
    JOIN `data-analytics-mate.DA.account` AS a ON es.id_account = a.id
    JOIN `data-analytics-mate.DA.account_session` AS acs ON acs.account_id = a.id
    JOIN `data-analytics-mate.DA.session` AS s ON s.ga_session_id = acs.ga_session_id
    JOIN `data-analytics-mate.DA.session_params` AS sp ON sp.ga_session_id = s.ga_session_id
    LEFT JOIN `data-analytics-mate.DA.email_open` AS eo ON es.id_message = eo.id_message
    LEFT JOIN `data-analytics-mate.DA.email_visit` AS ev ON es.id_message = ev.id_message
    WHERE sp.country != '(not set)' AND s.date IS NOT NULL
    GROUP BY 1, 2, 3, 4, 5
),
Combined AS (
    SELECT * FROM AccountMetrics
    UNION ALL
    SELECT * FROM EmailMetrics
),
FinalResults AS (
    SELECT
        date,
        country,
        send_interval,
        is_verified,
        is_unsubscribed,
        SUM(account_cnt) AS account_cnt,
        SUM(sent_msg) AS sent_msg,
        SUM(open_msg) AS open_msg,
        SUM(visit_msg) AS visit_msg,
        SUM(SUM(account_cnt)) OVER (PARTITION BY country) AS total_country_account_cnt,
        SUM(SUM(sent_msg)) OVER (PARTITION BY country) AS total_country_sent_cnt
    FROM Combined
    GROUP BY 1, 2, 3, 4, 5
)
SELECT
    *,
    DENSE_RANK() OVER (ORDER BY total_country_account_cnt DESC) AS rank_total_country_account_cnt,
    DENSE_RANK() OVER (ORDER BY total_country_sent_cnt DESC) AS rank_total_country_sent_cnt
FROM FinalResults
QUALIFY rank_total_country_account_cnt <= 10 OR rank_total_country_sent_cnt <= 10
ORDER BY date DESC, country;
